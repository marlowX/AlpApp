# Konfiguracja bazy danych PostgreSQL (zdalnej)
# Skopiuj ten plik jako .env i uzupełnij właściwymi danymi

# POSTGRESQL - ZDALNY SERWER
DB_HOST=192.168.1.100        # IP komputera z PostgreSQL
DB_PORT=5432                 # Port PostgreSQL (domyślnie 5432)
DB_NAME=alpsys              # Nazwa bazy danych
DB_USER=postgres            # Użytkownik PostgreSQL
DB_PASSWORD=haslo123        # Hasło PostgreSQL
DB_SCHEMA=zko               # Schemat dla ZKO

# Dla SSL (jeśli wymagane)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# APLIKACJA
NODE_ENV=development
PORT_BACKEND=5001           # Port backendu
PORT_FRONTEND=3001          # Port frontendu

# LOGS
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Przykład kompletnej connection string:
# postgresql://postgres:haslo123@192.168.1.100:5432/alpsys